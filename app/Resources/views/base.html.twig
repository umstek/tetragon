<!DOCTYPE html>
{# Some assets here are based on bower #}
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Tetragon{% endblock %}</title>
    {% block styles %}
        <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        {% if app.debug %} {# Use minified bootstrap in production #}
            <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.css') }}"/>
            <link rel="stylesheet"
                  href="{{ asset('assets/vendor/bootstrap-material-design/dist/css/bootstrap-material-design.css') }}"/>
            <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap-material-design/dist/css/ripples.css') }}"/>
            {#<link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap-theme.css') }}"/>#}
        {% else %}
            <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}"/>
            <link rel="stylesheet"
                  href="{{ asset('assets/vendor/bootstrap-material-design/dist/css/bootstrap-material-design.min.css') }}"/>
            <link rel="stylesheet"
                  href="{{ asset('assets/vendor/bootstrap-material-design/dist/css/ripples.min.css') }}"/>
            {#<link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap-theme.min.css') }}"/>#}
        {% endif %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>

<body>

<div class="navbar navbar-default ">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse"
                    data-target=".navbar-responsive-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand " href="/">Tetragon</a>
        </div>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
            <ul class="nav navbar-nav">
                <li class=""><a href="{{ path('items') }}">Inventory </a></li>
                <li class=""><a href="{{ path('customers') }}">Customers </a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="{{ path('fos_user_security_login') }}">
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                        {% else %}
                            Login
                        {% endif %}
                        <i class="material-icons">account_circle</i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div id="main" class="container">
    {# Dummy navbar. Works as a responsive spacer. #}
    {% block body %}{% endblock %}
</div>

{% if app.debug %} {# Use minified bootstrap in production #}
    <script src="{{ asset('assets/vendor/jquery/dist/jquery.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap-material-design/dist/js/material.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap-material-design/dist/js/ripples.js') }}"></script>
{% else %}
    <script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap-material-design/dist/js/material.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap-material-design/dist/js/ripples.min.js') }}"></script>
{% endif %}

<script>
    $.material.init();
</script>

{% block scripts %}
{% endblock %}
</body>
</html>
