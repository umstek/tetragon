{% extends 'base.html.twig' %}

{% block title %}Sales order{% endblock %}

{% block body %}

    {% embed 'flashWidget.html.twig' %}
    {% endembed %}

    <form method="post" action="{{ path('claim item', {'id': id}) }}">
        <div class="panel panel-warning">
            <div class="panel-body">
                <legend style="color: #009688">Confirm warranty claim</legend>
                <label>Type 'confirm' and press Submit.
                    <input class="form-control" type="text" name="confirm"/>
                </label>
            </div>
            <div class="panel-footer">
                <input class="btn btn-danger" type="submit">
            </div>
        </div>
    </form>

{% endblock %}