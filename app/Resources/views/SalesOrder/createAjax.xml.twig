{% form_theme form "bootstrap_3_layout.html.twig" %}
{% extends 'ajaxBase.xml.twig' %}

{% block data %}
{% endblock %}

{% block segment %}

    {% embed 'flashWidget.html.twig' %}
    {% endembed %}

{{ form_start(form, {'action': path('add sales order')}) }}
<div class="panel panel-default">

    <div class="panel-body">
        <legend style="color: #009688">Create a sales order</legend>
        {{ form_errors(form) }}
        {{ form_row(form.date) }}
        {{ form_row(form.customerId) }}
        {{ form_row(form.salesClerkId) }}

        {#{{ form_row(form.itemsDetails) }}#}
        {# We will be adding items later. #}

    </div>
    <div class="panel-footer" style="background-color:#ffffff;">
        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>

</div>
{{ form_end(form) }}

{% endblock %}