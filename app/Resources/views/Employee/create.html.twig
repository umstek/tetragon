{% form_theme form "bootstrap_3_layout.html.twig" %}
{% extends "::base.html.twig" %}

{% block title %}Add an Employee{% endblock %}

{% block body %}
    <h1>Add New Employee</h1>

    {% embed 'flashWidget.html.twig' %}
    {% endembed %}

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Add Employee</h3>
            {{ form_start(form, {'action': path('add employee')}) }}
        </div>
        <div id="add">
            <div class="panel-body">
                {{ form_row(form.id) }}
                {{ form_row(form.name) }}
                {{ form_row(form.sysUser.username) }}
                {{ form_row(form.role) }}
                {{ form_row(form.sysUser.plain_password) }}
                {{ form_row(form.sysUser.confirm_password) }}
                {{ form_row(form.address) }}
                {{ form_row(form.phone) }}
                {{ form_row(form.email) }}
                {{ form_row(form.sysUser.email) }}
                {{ form_row(form.nic) }}
            </div>
            <div class="panel-footer">
                {{ form_rest(form) }}
                {{ form_errors(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
