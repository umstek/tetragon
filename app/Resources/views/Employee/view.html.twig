{% extends "::base.html.twig" %}

{% block title %}Employees{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <h1>Welcome to the Employee page</h1>

        {% embed 'flashWidget.html.twig' %}
        {% endembed %}

        {% if employee != null %}
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ employee.name }}</h3>
                </div>
                <div class="panel-body">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <label class="list-group-item-heading">Address: </label>
                            {{ employee.address }}
                        </li>
                        <li class="list-group-item">
                            <label class="list-group-item-heading">Phone: </label>
                            {{ employee.phone }}
                        </li>
                        <li class="list-group-item">
                            <label class="list-group-item-heading">E-mail: </label>
                            {{ employee.email }}
                        </li>
                        <li class="list-group-item">
                            <label class="list-group-item-heading">NIC number: </label>
                            {{ employee.nic }}
                        </li>
                    </ul>
                </div>
                <div class="panel-footer">
                    <button type="button" class="btn btn-default">
                        Back
                    </button>
                    <button type="button" class="btn btn-primary">
                        Edit
                    </button>
                </div>
            </div>
        {% endif %}

    </div>
{% endblock %}